<h2>My hourly cookie</h2>

<div class="row">
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="{{img}}" alt="{{text}}">
            <div class="caption">
                <!--<h3></h3>-->
                <h3 id="cookie-category">{{category}}</h3>
                <p id="cookie-text">{{text}}</p>
                <p>
                    <a href="#" class="btn btn-primary" role="button">Likes {{likes}}</a>
                    <a href="#" class="btn btn-default" role="button">Dislikes {{dislikes}}</a>
                    <a href="#" class="btn btn-lg btn-success pull-right" id="btn-cookie-share" data-id="{{id}}" role="button">Share</a>
                </p>
                <input id="cookie-img" placeholder="Optional: Image url">
            </div>
        </div>
    </div>
</div>
